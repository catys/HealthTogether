<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yamada.biton.healthtogether.EntryConfirmActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/entryImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mailadress："/>

            <TextView
                android:id="@+id/entryMailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのメールアドレス" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password："/>

            <TextView
                android:id="@+id/entryPassTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのパスワード" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname："/>

            <TextView
                android:id="@+id/entryNickTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのニックネーム" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sex："/>

            <TextView
                android:id="@+id/sexTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="height："/>

            <TextView
                android:id="@+id/entryHeightTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザの身長" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age："/>

            <TextView
                android:id="@+id/entryAgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのニックネーム" />
        </TableRow>


        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/monitorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/entryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout"
        android:text="Entry"
        android:onClick="entryClick"/>

</RelativeLayout>
