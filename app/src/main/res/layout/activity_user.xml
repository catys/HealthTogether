<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yamada.biton.healthtogether.UserActivity">

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_below="@+id/userImg"
        android:layout_alignParentStart="true">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mailadress："/>

            <TextView
                android:id="@+id/userMailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのメールアドレス" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password："/>

            <TextView
                android:id="@+id/userPassTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのパスワード" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nickname："/>

            <TextView
                android:id="@+id/userNickTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザのニックネーム" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sex："/>

            <TextView
                android:id="@+id/userSexTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザの性別" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="height："/>

            <TextView
                android:id="@+id/userHeightTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザの身長" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="age："/>

            <TextView
                android:id="@+id/userAgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ユーザの年齢" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txetView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DisclosureInfo："/>

            <TextView
                android:id="@+id/bwTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bfTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="体脂肪率" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/vfTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="内臓脂肪レベル" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="基礎代謝" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/smTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="骨格筋率" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bmiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="BMI" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/baTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="体年齢" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="57dp"
        android:onClick="EditClick"
        android:text="Edit" />

</RelativeLayout>
